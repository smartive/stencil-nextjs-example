{
  "compilerOptions": {
    "noImplicitAny": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist/esm",
    "declarationDir": "./dist/types",
    "lib": [
      "dom",
      "es2015"
    ],
    "module": "esnext",
    "moduleResolution": "node",
    "target": "es2015",
    "skipLibCheck": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "declaration": true,
    "esModuleInterop": true
  },
  "include": [
    "lib",
    "scripts",
    ".eslintrc.cjs"
  ],
  "exclude": [
    "node_modules"
  ]
}
